				<div  class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">

					<label  class="mdl-textfield__label" >Password</label>
					<input class="mdl-textfield__input" name="password" type="password" placeholder="Password" required>
				</div>

				<div  class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">

					<label  class="mdl-textfield__label" >Password Confirmer</label>
					<input class="mdl-textfield__input" name="passwordConfirmed" type="password" placeholder="Password" required>
				</div>
				<br>

				<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
					<label  class="mdl-textfield__label" >ville</label>
					<input class="mdl-textfield__input" name="ville" type="passwtextord" placeholder="ville" value="{{ donnees.ville }}" required>
