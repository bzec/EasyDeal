
{% extends "layout.html.twig" %}
{% block contenu %}
<div class="android-content mdl-layout__content" style="margin-left: auto; margin-right: auto; margin-top:10%; ">

<form method="post" action="{{ path('user.validFormlogin') }}" style="background-color: #99CDD8;border-radius: 15px ">


            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <label class="mdl-textfield__label" >Adresse Mail :</label>
                    <input class="mdl-textfield__input" name="login"  type="email" value="" placeholder="Login"  required>
            </div>
            <br>
            <div  class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">

                    <label  class="mdl-textfield__label" >Password</label>
                    <input class="mdl-textfield__input" name="password" type="password" placeholder="Password" required>
            </div>
        {% if app.session.get('erreur') is not empty %}
         <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <small>{{ app.session.get('erreur') }} </small>

        </div>
        {% endif %}
    <br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <button class="mdl-button mdl-js-button mdl-button--raised mld-button--colored">
        Se connecter
    </button>
    </div>
    </form>

{% endblock %}

