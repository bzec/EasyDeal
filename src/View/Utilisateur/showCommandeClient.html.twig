{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="android-content mdl-layout__content">
    <div class="android-more-section">
    <div class="android-card-container mdl-grid">
    <style>
        .demo-card-square.mdl-card {
            width: 320px;
            height: 320px;
        }
        .demo-card-square > .mdl-card__title {
            color: #fff;
            background:
                    bottom right 15% no-repeat #46B6AC;
        }
    </style>

    {% for panier in data if data is not empty %}
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">{{panier.libelle_commande}}</h2>
            </div>
            <div class="mdl-card__supporting-text">
                Prix de commmande :{{ panier.prix_commande }} € <br>
                Date:  {{ panier.dates|date('d/m/Y H:m:s' )}}<br>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{path('commande.detailsCommande', {idCommande:panier.id_commande})}}">
                    Voir détails
                </a>
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{path('commande.del',{ idCommande: panier.id_commande})}}">Suppression</a>
            </div>
        </div>





{% endfor %}
    </div>
{% endblock %}