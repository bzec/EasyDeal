{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="android-content mdl-layout__content">
    <div class="android-more-section">
    <div class="android-card-container mdl-grid">
        <style>
            .demo-card-wide.mdl-card {
                width: 512px;
            }
            .demo-card-wide > .mdl-card__title {
                color: #fff;
                height: 176px;
                background:  center / cover;
            }
            .demo-card-wide > .mdl-card__menu {
                color: #fff;
            }
        </style>
        {%  if data is not empty %}

            <div class="demo-card-wide mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">{{data.libelle_commande}}</h2>
            </div>
            <div class="mdl-card__supporting-text">
                Nom du produit : {{ data.libelle_produits}} <br>
                Prix du produit : {{ data.prix_produits }} € <br>
                Heure de fin : {{ data.heure_fin_vente }} <br>
                Vendu par {{ data.libelle_entreprise }} <br>
                Adresse : {{ data.adresse }} <br>
                Prix de commmande :{{ data.prix_commande }} € <br>
                Date de la commande :  {{ data.dates|date('d/m/Y H:m:s' )}}<br>



            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{path('commande.mesCommandes')}}">
                    Retour
                </a>
            </div>
        </div>

        {% endif %}
    </div>
{% endblock %}