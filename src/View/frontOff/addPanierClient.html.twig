{% extends "layout.html.twig" %}
{% block contenu %}
        <form method="post" action="{{path('panier.addFromAddPanier')}}">
            <main role="main" class="container">
        <fieldset>
            <legend>choisir la quantié souhaité</legend>
           
            <input name="id_produits"  type="hidden" value="{{ data.id_produits }}"/>

            <div class="form-group">
            <p>quantié pour l'article : {{ data.libelle_produits }}</p>
            </div>
            <div class="form-group">
                    <div class="col-md-3 mb-3">
                        <label for="validQuantite">quantite:</label>
                        <input  name="quantite_produits" type="text" {% if erreurs.quantite_produits is defined %} class="form-control is-invalid" {% endif %}  {% if erreurs.quantite_produits is not defined %} class="form-control is-valid" {% endif %}
                                id="quantite_produits" placeholder="quantite" value= {% if donnees.quantite_produits is defined%}"{{donnees.quantite_produits}}"{% else %} "" {% endif %}  required>
                        {% if erreurs.quantite_produits is defined %}
                            <div class="invalid-feedback">
    
                                {{erreurs.quantite_produits}}
                            </div>
                        {% endif %}
                    </div>
                </div>
            <div class="form-group">
                <div class="col-md-6 mb-3">
                    <button class="btn btn-danger " type="submit">valider</button>
                </div>
            </div>


        </fieldset>
            </main><!-- /.container -->
</form>

{% endblock %}